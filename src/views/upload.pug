extends base

block content
    if errorMessage 
        span=errorMessage
    form(method="POST")
        input(type="text" placeholder="Title" name="title" maxlength=80 required)
        input(type="description" placeholder="description" name="description" minlength=20 required)
        input(type="hashtags" placeholder="hashtags, separated by comma." name="hashtags" required)
        input(type="submit" value="Upload Video")
